<?xml version="1.0" encoding="UTF-8"?>
<site site="http://.*mlb\.com"
	    plugin="http://.*mlb\.com.*player.*\.swf"
			initialState="playing"
			version="1.0">
	
	<crop x="0" y="0" width="640" height="360" />
	
	<seekbar type="simple">
		<start x="64" y="350" />
		<end   x="387" y="350" />
		<played>
				<color rgb="666666" />
		</played>
	</seekbar>
	
	<!-- PLAYING -->
	<state name="playing">
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="15" y="453" />
				<goto state="paused" />
			</action>
		</event>
		

	</state>
	
	<!-- PAUSED -->
	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="15" y="453" />
				<goto state="playing" />
			</action>
		</event>
	</state>
</site>